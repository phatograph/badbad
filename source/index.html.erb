---
title: Manage
---

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Manage ...</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <form class="form-inline">
          <div class="form-group">
            <label><small>Keyword search:</small></label>
            <input type="text" class="form-control input-sm" placeholder="Enter text">
          </div>
          <input type="submit" class="btn btn-primary btn-sm" value="Search" />
          <a class="btn btn-success btn-sm" href>Add</a>
        </form>
        <div class="search-list panel panel-default">
          <div class="panel-body">
            <% (1..20).each do |i| %>
              <div class="search-list-box">
                <h3>List <%= i %></h3>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">Label</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="text">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Label</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="text">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Label</label>
            <div class="col-sm-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Checkbox 1
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Checkbox 2
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Label</label>
            <div class="col-sm-10">
              <input type="file" class="form-control" />
              <div class="image-preview">
                <%= image_tag 'middleman.png' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Label</label>
            <div class="col-sm-10">
              <div class="checkbox-list">
                <% (1..20).each do |i| %>
                  <div class="checkbox">
                    <label>
                      <input type="checkbox"> Checkbox <%= i %>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" class="btn btn-primary" value="Save" />
              <a class="btn btn-default" href>Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
